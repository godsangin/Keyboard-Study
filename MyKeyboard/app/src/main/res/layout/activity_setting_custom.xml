<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".setting.custom.SettingCustomActivity">
    <include
            android:id="@+id/setting_header"
            layout="@layout/setting_header"
    />
    <LinearLayout
            android:id="@+id/button_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">
        <Button
                android:id="@+id/keyboard_view_bt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/key_background"
                android:text="키보드 보기"
                android:layout_margin="4dp"
                android:layout_weight="1"/>
        <Button
                android:id="@+id/custom_view_bt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/key_background"
                android:text="사용자 설정창 보기"
                android:layout_margin="4dp"
                android:layout_weight="1"/>

    </LinearLayout>
    <include
        android:id="@+id/setting_onehand_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/setting_item"/>
    <include
        android:id="@+id/setting_custom_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/setting_item"/>
    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/check_gridview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="8dp">

    </androidx.recyclerview.widget.RecyclerView>
    <include
            android:id="@+id/keyboard_view"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_gravity="bottom"
            layout="@layout/keyboard_action"
            android:visibility="gone"/>
    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/keyboard_custom_view"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_gravity="bottom"
            android:numColumns="9"
            android:visibility="gone"
    />
</LinearLayout>